+static drmModeModeInfoPtr generate_mode(int h_pixels, int v_lines, float freq)
+{
+    float h_pixels_rnd;
+    float v_lines_rnd;
+    float v_field_rate_rqd;
+    float top_margin;
+    float bottom_margin;
+    float interlace;
