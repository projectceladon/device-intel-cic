+cros_gralloc_driver* get_global_driver() {
+    static SpinLock global_lock;
+    if(global_driver) {
+        global_ref_count++;
+    }
+    else {
+        global_driver = new cros_gralloc_driver();
+        if(global_driver) {
+            if (global_driver->init() != 0) {
