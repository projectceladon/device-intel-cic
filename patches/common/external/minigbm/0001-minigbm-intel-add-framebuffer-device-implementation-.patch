+    float left_margin;
+    float right_margin;
+    float total_active_pixels;
+    float ideal_duty_cycle;
+    float h_blank;
+    float total_pixels;
+    float pixel_freq;
+    float h_freq;
+
+    float h_sync;
+    float h_front_porch;
+    float v_odd_front_porch_lines;
+    int interlaced = 0;
+    int margins = 0;
+
+    drmModeModeInfoPtr m = malloc(sizeof(drmModeModeInfo));
